<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/Button_letter_ABC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@drawable/press_style_carnumime_btn_text_color"
            android:background="@drawable/press_style_carnumime_letters"
            android:text="ABC" />

        <Button
            android:id="@+id/Button_letter_DEF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@drawable/press_style_carnumime_btn_text_color"
            android:background="@drawable/press_style_carnumime_letters"
            android:text="DEF" />

        <Button
            android:id="@+id/Button_letter_GHI"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@drawable/press_style_carnumime_btn_text_color"
            android:background="@drawable/press_style_carnumime_letters"
            android:text="GHI" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/Button_letter_JKL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@drawable/press_style_carnumime_btn_text_color"
            android:background="@drawable/press_style_carnumime_letters"
            android:text="JKL" />

        <Button
            android:id="@+id/Button_letter_MNO"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@drawable/press_style_carnumime_btn_text_color"
            android:background="@drawable/press_style_carnumime_letters"
            android:text="MNO" />

        <Button
            android:id="@+id/Button_letter_PQR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@drawable/press_style_carnumime_btn_text_color"
            android:background="@drawable/press_style_carnumime_letters"
            android:text="PQR" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/Button_letter_STU"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@drawable/press_style_carnumime_btn_text_color"
            android:background="@drawable/press_style_carnumime_letters"
            android:text="STU" />

        <Button
            android:id="@+id/Button_letter_VW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@drawable/press_style_carnumime_btn_text_color"
            android:background="@drawable/press_style_carnumime_letters"
            android:text="VW" />

        <Button
            android:id="@+id/Button_letter_XYZ"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@drawable/press_style_carnumime_btn_text_color"
            android:background="@drawable/press_style_carnumime_letters"
            android:text="XYZ" />
    </LinearLayout>

</LinearLayout>